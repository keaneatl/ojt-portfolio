  >
    <button class="contact border-4 border-solid border-black rounded-lg"
      ><h3 class="m-0 p-3 text-xl xl:text-[1.7rem]">Download Resume</h3></button
    >
  </a>
</header>

<script>
  window.addEventListener("scroll", () => {
    const contactButton = document.querySelector(
      "button.contact"
    ) as HTMLElement;
    const header = document.querySelector("header.main") as HTMLElement;
    const logo = document.querySelector("h3.logo") as HTMLElement;
    const scrollPosition = window.scrollY;

    if (scrollPosition > 100) {
      header.style.backgroundColor = "#1A1A1A";
      header.style.color = "#f4f6f4";
      logo.style.borderColor = "#f4f6f4";
      contactButton.style.borderColor = "#f4f6f4";
    } else {
      header.style.backgroundColor = "transparent";
      header.style.color = "black";
      logo.style.borderColor = "black";
      contactButton.style.borderColor = "black";
    }
  });
</script>
